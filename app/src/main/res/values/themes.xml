<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoadtripGames" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_secondary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_accent</item>]
        <item name="colorOnSecondary">@color/text_on_dark_bg</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>

        <item name="colorControlNormal">@color/text_on_dark_bg</item>
        <item name="android:textColorPrimary">@color/text_on_dark_bg</item>
        <item name="actionMenuTextColor">@color/text_on_dark_bg</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.RoadtripGames.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RoadtripGames.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RoadtripGames.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
